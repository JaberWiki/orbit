{
    "name": "ryangjchandler/orbit",
    "description": "A flat-file database driver for Eloquent.",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Chandler",
            "email": "support@ryangjchandler.co.uk",
            "homepage": "https://ryangjchandler.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "illuminate/database": "^8.34",
        "illuminate/events": "^8.34",
        "illuminate/support": "^8.34",
        "spatie/yaml-front-matter": "^2.0",
        "symfony/yaml": "^3.0 || ^4.0 || ^5.0",
        "symplify/git-wrapper": "^9.2"
    },
    "require-dev": {
        "orchestra/testbench": "^6.15",
        "phpunit/phpunit": "9.4.*",
        "vimeo/psalm": "^4.6"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Orbit\\OrbitServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Orbit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orbit\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always"
    }
}
